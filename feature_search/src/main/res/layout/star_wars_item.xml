<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="personItem"
            type="com.android.sample.core.model.Person" />

        <variable
            name="callback"
            type="com.android.sample.feature.search.ui.MainAdapter.OnClickListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:clickable="true"
        android:elevation="@dimen/spacing_mini"
        android:focusable="true"
        android:onClick="@{() -> callback.onClick(personItem)}"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="@dimen/spacing_mini">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/star_wars_item_height"
            android:layout_margin="@dimen/spacing_small"
            android:background="@color/black"
            android:gravity="center"
            android:text="@{personItem.name}"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

</layout>