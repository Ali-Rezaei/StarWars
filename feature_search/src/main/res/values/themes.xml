<resources>

    <style name="SearchViewTheme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <style name="Widget.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:editTextColor">@color/gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LoadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/loading_animation</item>
    </style>

    <style name="ErrorViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ErrorImageViewStyle">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="srcCompat">@drawable/ic_error</item>
    </style>

    <style name="ErrorTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/retry</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_xlarge</item>
    </style>

    <style name="Widget.StarWarsSearch.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="Widget.StarWarsSearch.Label" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.StarWarsSearch.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.StarWarsSearch.Body" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="Widget.StarWarsSearch.Body1" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>